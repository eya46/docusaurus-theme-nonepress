{
  "name": "root",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "yarn build:packages && yarn start:test",
    "start:test": "yarn workspace website start",
    "start:test:baseUrl": "yarn workspace website start:baseUrl",
    "build": "yarn build:packages && yarn build:test",
    "build:packages": "lerna run build --no-private",
    "build:test": "yarn workspace website build",
    "build:test:baseUrl": "yarn workspace website build:baseUrl",
    "clear:test": "yarn workspace website clear",
    "serve:test": "yarn workspace website serve",
    "canary": "yarn canary:bumpVersion && yarn canary:publish",
    "canary:version": "echo 0.0.0-`git rev-list --count HEAD`+`git rev-parse --short HEAD`",
    "canary:bumpVersion": "yarn lerna version `yarn --silent canary:version` --exact --no-push --yes",
    "canary:publish": "yarn lerna publish from-package --dist-tag canary --yes --no-verify-access",
    "lerna": "lerna",
    "clear": "(yarn workspace website clear || echo 'Failure while running docusaurus clear') && yarn lerna exec --ignore docusaurus yarn rimraf lib"
  },
  "devDependencies": {
    "@crowdin/cli": "^3.10.0",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.3",
    "@types/prompts": "^2.0.14",
    "@types/react": "^18.0.15",
    "@types/react-dev-utils": "^9.0.11",
    "@types/react-test-renderer": "^18.0.0",
    "@types/shelljs": "^0.8.11",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-regexp": "^1.7.0",
    "lerna": "^5.1.8",
    "prettier": "^2.7.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "stylelint": "^15.6.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^33.0.0",
    "typescript": "^4.9.5"
  }
}
