{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "test"
  ],
  "scripts": {
    "start": "yarn build:packages && yarn start:test",
    "start:test": "yarn workspace test start",
    "start:test:baseUrl": "yarn workspace test start:baseUrl",
    "build": "yarn build:packages && yarn build:test",
    "build:packages": "lerna run build --no-private",
    "build:test": "yarn workspace test build",
    "build:test:baseUrl": "yarn workspace test build:baseUrl",
    "clear:test": "yarn workspace test clear",
    "serve:test": "yarn workspace test serve",
    "canary": "yarn canary:bumpVersion && yarn canary:publish",
    "canary:version": "echo 0.0.0-`git rev-list --count HEAD`+`git rev-parse --short HEAD`",
    "canary:bumpVersion": "yarn lerna version `yarn --silent canary:version` --exact --no-push --yes",
    "canary:publish": "yarn lerna publish from-package --dist-tag canary --yes --no-verify-access",
    "lerna": "lerna",
    "clear": "(yarn workspace test clear || echo 'Failure while running docusaurus clear') && yarn lerna exec --ignore docusaurus yarn rimraf lib"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.0",
    "@babel/plugin-proposal-optional-chaining": "^7.16.0",
    "@babel/plugin-transform-async-to-generator": "^7.16.0",
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/fs-extra": "^9.0.6",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.22",
    "@types/prismjs": "^1.16.2",
    "@types/prompts": "^2.0.9",
    "@types/react": "^17.0.2",
    "@types/react-dev-utils": "^9.0.1",
    "@types/react-helmet": "^6.0.0",
    "@types/react-router-config": "^5.0.1",
    "cross-env": "^7.0.3",
    "lerna": "^4.0.0",
    "prettier": "^2.4.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  }
}
